<h1>Listing positions</h1>

<table border=1>
  <tr>
    <th>Title</th> 
    <th>Status</th>
    <th>Location</th>
    <th>Last date</th>
    
    
  </tr>

<% @positions.each do |position| %>
  <tr>
    <td><%= link_to position.title,"/positions/"+position.id.to_s+"/show" %></td>
    <td><%= position.status %></td>
    <td><%= position.location %></td>
    <td><%= position.last_date %></td>
    <td><%= link_to 'Edit', "/positions/"+position.id.to_s+"/edit"%></td>
    <td><%= link_to 'Destroy', position, :confirm => 'Are you sure?', :method => :delete %></td>	
    <% end %>
  </tr>

</table>

<br />

<%= link_to 'New Position', new_position_path %>

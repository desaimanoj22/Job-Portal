<th><%= link_to 'Company List',"/companies"%></th>

<th><%= link_to 'Edit your profile',"/agencies/"+@agency.id.to_s+"/edit"%></th>
</table>
<div class="content_pane">
<h3><%=@agency.name%></h3>

		<div class="label"><b>Name:</b></div>
		<div class="value"><%= @agency.name %></div><br clear="all" />
		<div class="label"><b>Established date:</b></div>
		<div class="value"><%= @agency.established_date %></div><br clear="all" />

		<div class="label"><b>Website:</b></div>
		<div class="value"><%= @agency.website %></div><br clear="all" />

		<div class="label"><b>Description:</b></div>
		<div class="value"><%= @agency.description %></div><br clear="all" />
		<div class="label"><b>Address:</b></div>
		<div class="value"><%= Contactinfo.find(@agency.contactinfos_id).address if @agency.contactinfos_id %></div><br clear="all" />
        <div class="label"><b>State:</b></div>
		<div class="value"><%= State.find(Contactinfo.find(@agency.contactinfos_id).state).name%></div><br clear="all" />

		<div class="label"> <b>Email:</b></div>
		<div class="value"><%= Contactinfo.find(@agency.contactinfos_id).email if @agency.contactinfos_id %></div><br clear="all" />
		<div class="label"> <b>Alternate Email:</b></div>
		<div class="value"><%= Contactinfo.find(@agency.contactinfos_id).alternate_email if @agency.contactinfos_id %></div><br clear="all" />
		<div class="label"> <b>Contact Number:</b></div>
		<div class="value"><%= Contactinfo.find(@agency.contactinfos_id).contact_number if @agency.contactinfos_id %></div><br clear="all" />

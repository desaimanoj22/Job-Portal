   <dt><b>Email:</b></dt> 
   <dd><%= Contactinfo.find(@candidate.contactinfos_id).email if @candidate.contactinfos_id %></dd> 
   <br>
   <dt><b>Alternate Email:</b></dt>
   <dd><%= Contactinfo.find(@candidate.contactinfos_id).alternate_email if @candidate.contactinfos_id %></dd>

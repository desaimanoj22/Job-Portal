<div  style="background-color: #fff; color: #333;margin-left: 100px;font-style: normal" >
	

<dl >
  <dt><b>First name:</b></dt>
  <dd> <%= @candidate.first_name %></dd>
  <br>
   <dt><b>Last name:</b></dt>
   <dd><%= @candidate.last_name %></dd>
   <br>
   <dt><b>Qualification:</b></dt>
   <dd><%= @candidate.qualification %></td>
   <br>
   <dt><b>Date of Birth:</b></dt>
   <dd><%= @candidate.date_of_birth %></td>

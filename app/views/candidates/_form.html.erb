   <td> <%= text_field :contactinfo,:contact_number %></td>
  </div>
  </tr>
<tr>
<td>  <p><label for="candidate_qualification">Qualification:</label><br/></td>
<td>	<%= select_tag "candidate[qualification]",options_for_select(["Under Graguate","Post Graduate"]), {:multiple => true}%></td>
</tr> 
  
  <tr>
 <td> <p><label for="candidate_experience">Experience:</label><br/></td>
<td><%= select_tag "candidate[experience]",options_for_select([">1","1-3","4-6","7-10"])%>
</p></td>
</tr>
<tr>
 <td> <p><label for="candidate_expected_salary">Expected Salary:</label><br/></td>
<td>	<%= select_tag "candidate[expected_salary]",options_for_select(["10,000-30,000","40,000-70,000","75,000-100,000"])%>
	</p></td>
	</tr>
	<tr>
 <div class="field" >
<tr>
 <td><%= f.label :skill_set %><br /></td>
  <td><%= select_tag "candidate[skillset]",options_for_select(@skillsets), {:multiple => true}%></td>
  
  </div>
  </tr>
 
<tr>
  <div class="field">
   <td> <%= f.label :resume%><br /></td>
   <td> <%= f.file_field :resume %></td>
  </div>
  </tr>

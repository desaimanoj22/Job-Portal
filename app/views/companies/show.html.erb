<div class="content_pane">
	<%if current_user.user_type == "Candidate" %>
	<br clear="all" />
	<%= render "candidates/menu" %>
	<% end %>
	<%= link_to 'Edit', edit_company_path(@company) if @company.user_id == current_user.id %>

	<h4><%= @company.name%></h4>
	<table class="gridtable">
		<tr>
			<td>
			<b>Name:</b>
			</td>
			<td><%= @company.name %></td>
		</tr>
		<tr>
			<td>
			<b>Established date:</b>
			</td>
			<td><%= @company.established_date %></td>
		</tr>
		<tr>
			<td><b>Website:</b></td>
			<td><%= @company.website %></td>
		</tr>
		<tr>
			<td>
			<b>Description:</b>
			</td>
			<td><%= @company.description %></td>
		</tr>
		<tr>
			<td>
			<b>Address:</b>
			</td>
			<td><%= Contactinfo.find(@company.contactinfos_id).address if @company.contactinfos_id %></td>
		</tr>
		<tr>
			<td>
			<b>State:</b>
			</td>
			<td><%= State.find(Contactinfo.find(@company.contactinfos_id).state).name%></td>
		</tr>
		<tr>
			<td>
			<b>Email:</b>
			</td>
			<td><%= Contactinfo.find(@company.contactinfos_id).email if @company.contactinfos_id %></td>
		</tr>
		<tr>
			<td>
			<b>Alternate Email:</b>
			</td>
			<td><%= Contactinfo.find(@company.contactinfos_id).alternate_email if @company.contactinfos_id %></td>
		</tr>
		<tr>
			<td>
			<b>Contact Number:</b>
			</td>
			<td><%= Contactinfo.find(@company.contactinfos_id).contact_number if @company.contactinfos_id %></td>
		</tr>
	</table>
